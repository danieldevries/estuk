= simple_form_for resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'user-form' } do |f|
  %h2 Resend unlock instructions
  = f.error_notification
  = f.full_error :unlock_token

 .form-input
    = f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email'

 .form-actions
    = f.button :submit, 'Resend unlock instructions', class: 'btn btn-primary btn-block'

= render 'devise/shared/links'
