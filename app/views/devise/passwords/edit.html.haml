= simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'user-form' } do |f|
  %h2 Change your password
  = f.error_notification

  = f.input :reset_password_token, as: :hidden
  = f.full_error :reset_password_token

 .form-inputs
    = f.input :password, required: true, autofocus: true, label: false, placeholder: 'New password'
    = f.input :password_confirmation, required: true, label: false, placeholder: 'Confirm your password'

  .form-actions
    = f.button :submit, 'Change my password', class: 'btn btn-primary btn-block'

= render 'devise/shared/links'
