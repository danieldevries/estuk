= simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'user-form' } do |f|
  %h2 Forgot your password?
  = f.error_notification

  .form-inputs
    = f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email', html_options: { class: 'form-control' }

  .form-actions
    = f.button :submit, "Send me reset password instructions", class: 'btn btn-primary btn-block'

= render "devise/shared/links"
