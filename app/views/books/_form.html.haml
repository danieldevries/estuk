= simple_form_for @book, html: { class: 'user-form' } do |f|
  %h2= title
  = f.error_notification

  .form-inputs
    = f.input :name, required: true, label: false, placeholder: 'Name', input_html: { class: 'form-control' }
    = f.input :author, required: true, label: false, placeholder: 'Author', input_html: { class: 'form-control' }
    = f.input :description, label: false, placeholder: 'Description', input_html: { class: 'form-control' }
    = f.input :price, label: false, placeholder: 'Price', input_html: { class: 'form-control' }
    = f.input :image
    = f.input :resource

    .checkbox.text-center
      = f.input :availability
  .form-actions
    = f.button :submit, class: 'btn btn-primary btn-block'
