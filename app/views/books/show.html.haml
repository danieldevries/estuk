.row
  .col-md-6
    = image_tag @book.image(:original), class: 'img-responsive'
  .col-md-6
    %h3
      = @book.name
      by
      = @book.author
    %p.justify= @book.description
    %h4
      $
      = @book.price.to_f / 100

= link_to 'Edit', edit_book_path(@book)
= link_to 'Back', :back

- if current_user
  = form_for @book.sales.new, url: buy_path(slug: @book.slug) do |f|
    %button.btn.btn-primary.btn-lg BUY
